(display "Hello WOrld\n")
(display "This is Joshua's first Scheme Program!!\n")

(define x 0)
(define y 8)
(define z 0)
(display "X is: ")
(display x)
(display " and Y is: ")
(display y)
(display "\n")

(display "Enter three integer values\n")
(set! x (read))
(set! y (read))
(set! z (read))
(display "The average of the int values is: ")
(display ( / (+ x y z) 3))
(exit)
